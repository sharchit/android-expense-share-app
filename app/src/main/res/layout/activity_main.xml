<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/pale_yellow">
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:text="Welcome to Expense Share."
        android:textSize="50dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/signInText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/signInButton"
        android:layout_marginBottom="24dp"
        android:text="Sign-in with Google to continue."
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/gray"
        android:textSize="18dp"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:backgroundTint="@color/olive_green"
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In with google"
        app:icon="@drawable/googlelogo"
        app:iconTint="@color/white"
        android:textColor="@color/white"
        app:iconSize="20dp"
        app:iconGravity="start"
        app:iconPadding="4dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="150dp"
        android:layout_marginHorizontal="40dp"/>

    <TextView
        android:id="@+id/authorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:text="MADE BY: ARCHIT SHARMA"
        android:textColor="@color/gray"
        android:gravity="center"
        android:textSize="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>